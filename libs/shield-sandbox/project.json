{
  "name": "shield-sandbox",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shield-sandbox/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/shield-sandbox/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/shield-sandbox/dist",
        "main": "libs/shield-sandbox/src/index.ts",
        "tsConfig": "libs/shield-sandbox/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": true,
        "declarationRootDir": "libs/shield-sandbox/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": ["libs/shield-sandbox/package.json"],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" }
        }
      }
    },
    "bundle-es": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs"],
      "options": {
        "commands": [
          "rm -rf libs/shield-sandbox/dist/es-extension",
          "mkdir -p libs/shield-sandbox/dist/es-extension",
          "if [ -d dist/apps/shield-macos/Release/AgenShieldES.app ]; then cp -r dist/apps/shield-macos/Release/AgenShieldES.app libs/shield-sandbox/dist/es-extension/AgenShieldES.app; elif [ -d libs/shield-sandbox/es-extension/AgenShieldES.app ]; then cp -r libs/shield-sandbox/es-extension/AgenShieldES.app libs/shield-sandbox/dist/es-extension/AgenShieldES.app; else echo 'WARNING: No AgenShieldES.app found'; fi"
        ],
        "parallel": false
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs", "bundle-es"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/shield-sandbox/dist/package.json"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish libs/shield-sandbox/dist --access public --registry=https://registry.npmjs.org/"
      }
    }
  }
}
