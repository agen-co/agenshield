{
  "name": "shield-daemon",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shield-daemon/src",
  "projectType": "library",
  "tags": ["versioning:synchronized"],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/shield-daemon/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/shield-daemon/dist",
        "main": "libs/shield-daemon/src/index.ts",
        "additionalEntryPoints": [
          "libs/shield-daemon/src/main.ts",
          "libs/shield-daemon/src/auth/index.ts",
          "libs/shield-daemon/src/vault/index.ts"
        ],
        "tsConfig": "libs/shield-daemon/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": true,
        "declarationRootDir": "libs/shield-daemon/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": ["libs/shield-daemon/README.md", "LICENSE", "libs/shield-daemon/package.json"],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": ["@agenshield/ipc", "@agenshield/sandbox", "fastify", "@fastify/*"]
        }
      }
    },
    "bundle-ui": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs", "shield-ui:build"],
      "options": {
        "commands": [
          "rm -rf libs/shield-daemon/dist/ui-assets",
          "cp -r dist/apps/shield-ui libs/shield-daemon/dist/ui-assets"
        ],
        "parallel": false
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["bundle-ui"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/shield-daemon/dist/package.json"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish libs/shield-daemon/dist --access public --registry=https://registry.npmjs.org/"
      }
    }
  }
}
