{
  "name": "shield-interceptor",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shield-interceptor/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/shield-interceptor/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/shield-interceptor/dist",
        "main": "libs/shield-interceptor/src/index.ts",
        "additionalEntryPoints": [
          "libs/shield-interceptor/src/register.ts",
          "libs/shield-interceptor/src/require.ts"
        ],
        "tsConfig": "libs/shield-interceptor/tsconfig.lib.json",
        "format": ["esm", "cjs"],
        "declaration": true,
        "declarationRootDir": "libs/shield-interceptor/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": ["libs/shield-interceptor/README.md", "LICENSE", "libs/shield-interceptor/package.json"],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": ["@agenshield/ipc"]
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/shield-interceptor/dist/package.json"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish libs/shield-interceptor/dist --access public --registry=https://registry.npmjs.org/"
      }
    }
  }
}
