{
  "name": "shield-patcher",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shield-patcher/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/shield-patcher/dist",
        "main": "libs/shield-patcher/src/index.ts",
        "tsConfig": "libs/shield-patcher/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": true,
        "declarationRootDir": "libs/shield-patcher/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": [
          "libs/shield-patcher/README.md",
          "LICENSE",
          "libs/shield-patcher/package.json",
          "libs/shield-patcher/templates"
        ],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": ["@agenshield/ipc"]
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/shield-patcher/dist/package.json"
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "libs/shield-patcher/dist"
      }
    }
  }
}
