{
  "name": "shield-integrations",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shield-integrations/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/shield-integrations/dist",
        "main": "libs/shield-integrations/src/index.ts",
        "tsConfig": "libs/shield-integrations/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": true,
        "declarationRootDir": "libs/shield-integrations/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": ["libs/shield-integrations/package.json"],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" }
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/shield-integrations/dist/package.json"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish libs/shield-integrations/dist --access public --registry=https://registry.npmjs.org/"
      }
    }
  }
}
