{
  "name": "shield-skills",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shield-skills/src",
  "projectType": "library",
  "tags": ["versioning:synchronized"],
  "targets": {
    "build-cjs": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/shield-skills/dist",
        "main": "libs/shield-skills/src/index.ts",
        "tsConfig": "libs/shield-skills/tsconfig.lib.json",
        "format": ["esm"],
        "declaration": true,
        "declarationRootDir": "libs/shield-skills/src",
        "bundle": true,
        "thirdParty": false,
        "platform": "node",
        "assets": [
          "libs/shield-skills/README.md",
          "LICENSE",
          "libs/shield-skills/package.json",
          { "input": "libs/shield-skills/skills", "glob": "**/*", "output": "skills" },
          { "input": "libs/shield-skills/templates", "glob": "**/*", "output": "templates" }
        ],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "external": ["@agenshield/ipc"]
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-cjs"],
      "options": {
        "command": "node scripts/strip-dist-from-pkg.js libs/shield-skills/dist/package.json"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "npm publish libs/shield-skills/dist --access public --registry=https://registry.npmjs.org/"
      }
    }
  }
}
