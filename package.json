{
  "name": "@agen-co/source",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "https://github.com/agen-co/agenshield",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "nx run-many -t build --outputStyle stream",
    "test": "nx run-many -t test --outputStyle stream --skip-nx-cache",
    "test:cached": "nx run-many -t test --outputStyle stream",
    "lint": "nx run-many -t lint --outputStyle stream",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs": "mint dev --port 4301",
    "cli": "node libs/cli/dist/src/cli.js",
    "cli:setup": "node libs/cli/dist/src/cli.js setup",
    "cli:daemon:start": "node libs/cli/dist/src/cli.js daemon start",
    "cli:daemon:stop": "node libs/cli/dist/src/cli.js daemon stop",
    "cli:daemon:status": "node libs/cli/dist/src/cli.js daemon status",
    "cli:uninstall": "sudo node libs/cli/dist/src/cli.js uninstall",
    "cli:help": "node libs/cli/dist/src/cli.js help",
    "daemon:start": "node libs/shield-daemon/dist/src/main.js",
    "daemon:dev": "AGENSHIELD_AGENT_HOME=./tmp/dev-agent npx tsx watch libs/shield-daemon/src/main.ts",
    "test-harness:install": "cd tools/test-harness && npm link",
    "test-harness:uninstall": "cd tools/test-harness && npm unlink -g",
    "test:e2e": "sudo npx nx run test-e2e:e2e --skip-nx-cache",
    "test:e2e-policies": "npx nx run test-e2e-policies:e2e --skip-nx-cache",
    "test:e2e-enforcement": "sudo npx nx run test-e2e-enforcement:e2e --skip-nx-cache",
    "registry:start": "node scripts/registry/start.mjs",
    "registry:publish": "node scripts/registry/publish.mjs",
    "registry:stop": "node scripts/registry/stop.mjs"
  },
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/esbuild": "^22.4.4",
    "@nx/eslint": "22.4.4",
    "@nx/eslint-plugin": "22.4.4",
    "@nx/jest": "22.4.4",
    "@nx/js": "22.4.4",
    "@nx/node": "22.4.4",
    "@nx/vite": "^22.4.4",
    "@nx/workspace": "22.4.4",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@swc/jest": "~0.2.38",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "jest-util": "^30.2.0",
    "jsonc-eslint-parser": "^2.4.2",
    "nx": "22.4.4",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node": "10.9.2",
    "tslib": "^2.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.52.0",
    "verdaccio": "^6.2.5"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "nx": {
    "includedScripts": []
  }
}
